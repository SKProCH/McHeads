<Window x:Class="CornerHead.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mch="clr-namespace:leMaik.McHeads;assembly=leMaik.McHeads"
        Title="MainWindow"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">
    <mch:MouseWatchingHead Playername="{Binding Playername, UpdateSourceTrigger=PropertyChanged}"
                           Height="{Binding Size, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                           Width="{Binding Size, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
</Window>
